<h1>sign up</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
        <%= f.lable :name %>
        <%= f.text_field :name %>
        <%= f.lable :email %>
        <%= f.text_field :email %>
        <%= f.password_field :password %>
        <%= f.lable :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "create my account", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>